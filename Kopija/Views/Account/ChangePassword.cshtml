@{

    @model Kopija.ModeliPomocni.ResetPasswordModel

}

<h1 class="my-4">Promena lozinke</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@Html.ActionLink("Nazad", "KorisnikLista")</li>
</ol>

<div class="row">
    <div class="col-lg-5 mx-auto">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <p class="mb-0"><i class="fa-solid fa-check"></i> @ViewBag.Message</p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="card mb-4">
            <div class="card-body">
                <form asp-action="ChangePassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Password" class="control-label"> Unesite Sifru</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="control-label"> Potvrdite Sifru</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="float-end">
                            <input type="submit" value="Promeni sifru" class="btn btn-danger" />
                        </div>
                    </div>
                </form>
            </div>
</div>


<script type="text/javascript" src="@Url.Content("~/lib/jquery/dist/jquery.js")"></script>
<script type="text/javascript" src="@Url.Content("~/lib/jquery-validation/dist/jquery.validate.js")"></script>
<script type="text/javascript" src="@Url.Content("~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js")"></script> <!--OVO JE KLJUCNO STO ME USRANE VALIDACIJE JEBALE POLA DANA JEBEM IM MATER USRANU-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }
