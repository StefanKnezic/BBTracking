@{
   
    @model Kopija.Models.RoleModel
}


<h2>Dodaj Nivo Pristupa</h2>



<div class="login_content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card login-card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Prijava</h3></div>
                    <div class="card-body">
                        <form asp-action="CreateRole">
                            
                            <div class="form-floating mb-3">
                                <input class="form-control" type="text" asp-for="Ime" placeholder="Nivo Pristupa"> 
                                <span asp-validation-for="Ime" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="submit" class="btn btn-danger d-block" value="Dodaj Nivo Pristupa" />
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small">Pokreće ga: <b>PerSu</b></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


